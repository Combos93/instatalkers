<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<div class="online">
  <ul id="users-list">
    <% @users.each do |user| %>
      <li class="pure">
        <%= user.nickname %>
        <% if user.online %>
          <%= image_tag "green_dot.png", id: "#{user.id}-status", class: "active" %>
        <% else %>
          <%= image_tag "red_dot.png", id: "#{user.id}-status", class: "inactive" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<ul class="mt-4 list-unstyled">
  <%= render @rooms %>
</ul>

<div class="mt-2">
  <%= render 'rooms/form', room: @room %>
</div>
